@model PagedList.IPagedList<QLNH.ThucDon>
@using PagedList.Mvc;

@{
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
    QLNHEntities db = new QLNHEntities();

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bán hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">

        <div class="col-lg-6">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách bàn ăn
                </div>
                <div class="panel-body">
                    @foreach (var item in db.BanAns.ToList())
                    {
                        <div class="BanAn">
                            <img src="~/Assets/Images/BanAn.png" width="100%" height="100%" />
                            
                            @{ 
                                if (item.TrangThai.Equals("Trống"))
                                { <p style="color:green">Bàn số @item.Id</p> }
                                else if ((item.TrangThai.Equals("Đã được đặt")))
                                {  <p style="color:sandybrown">Bàn số @item.Id</p> }
                                else
                                {  <p style="color:red">Bàn số @item.Id</p> }
                             }
                        </div>
                                }
                   
                </div>
            </div>

        </div>
        <div class="row">

            <div class="col-lg-6">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Bàn số <p id=""></p>
                    </div>
                    <div class="panel-body">
                        <label>Loại bàn : </label><span> 123 </span><br />
                        <label>Trạng thái : </label><span> 123 </span><br />
                        <label>Ghi chú : </label><span> 123 </span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-6">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách bàn ăn
            </div>
            <div class="panel-body">

                <select name="IdLoaiMonAn" id="IdLoaiMonAn" class="form-control">
                    @foreach (LoaiMonAn s in db.LoaiMonAns.ToList())
                    {
                        <option value="@s.Id">@s.Ten</option>
                    }
                </select>

                <table id="phantrang_thucdon_banghang">
                    <tr>
                        <th> Tên món ăn </th>
                        <th> Loại </th>
                        <th> Giá</th>
                    </tr>
                    @foreach (var item in db.ThucDons.ToList())
                    {
                        <tr>
                            <td>@item.LoaiMonAn.Ten</td>
                            <td>@item.Ten</td>
                            <td>@item.Gia</td>
                        </tr>
                        
                    }

                </table>
              
            </div>
        </div>

    </div>

    </div>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        .BanAn {
            width: 70px;
            margin: 8px;
            text-align: center;
           
            font-weight: 600;
            font-size 1.1em;
            float: left;
        }

            .BanAn img {
                width: 50px;
                height: 50px;
            }
    </style>

</body>
</html>
